extends ../layouts/app

block content
  div.max-w-2xl.mx-auto
    div.bg-white.shadow.rounded-lg.border.border-gray-200.overflow-hidden
      div.px-6.py-4.border-b.border-gray-200
        h3.text-lg.font-bold.text-gray-900 Novo Tipo de Férias
        p.text-sm.text-gray-500 Define as regras para um novo tipo de ausência.

      div.p-6
        form(action="/leave-types" method="POST" class="space-y-6")
          
          div
            label(for="name" class="block text-sm font-medium text-gray-700") Nome
            input(type="text" name="name" id="name" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm")

          div
            label(for="description" class="block text-sm font-medium text-gray-700") Descrição
            textarea(name="description" id="description" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm")

          div
            label(for="max_days" class="block text-sm font-medium text-gray-700") Máximo de Dias (Anual)
            input(type="number" name="max_days" id="max_days" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm")
            p.mt-1.text-xs.text-gray-500 Deixa em branco se não houver limite.

          div.flex.justify-end.pt-4
            a(href="/leave-types" class="px-4 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 mr-3") Cancelar
            button(type="submit" class="px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700 shadow-sm") Criar Tipo