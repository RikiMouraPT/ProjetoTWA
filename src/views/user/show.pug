extends ../layouts/app

block content
  h1 Detalhes: #{user.name}
  
  table(border=`1`, style=`text-align: center; justify-content: center;`)
    thead
      tr
        th ID
        th Nome
        th Email
        th Role
        th Dept.
    tbody
      tr
        td= user.id
        td= user.name
        td= user.email
        td= user.role
        td= user.department_name
  
  hr
  a(href=`javascript:history.back()`, style=`text-decoration:none; border: 1px solid black; padding: 5px;`) ⮜ Voltar
  a(href=`/users/${user.id}/edit`, style=`text-decoration:none; border: 1px solid black; padding: 5px`) ✎ Editar