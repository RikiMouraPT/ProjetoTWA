extends ../layouts/app

block content
  div.max-w-2xl.mx-auto
    div.bg-white.shadow.rounded-lg.border.border-gray-200.overflow-hidden
      
      div.px-6.py-5.border-b.border-gray-200.flex.justify-between.items-center
        h3.text-lg.font-bold.text-gray-900 Perfil do Utilizador
        
        a(href=`/users/${user.id}/edit` class="text-sm font-medium text-blue-600 hover:text-blue-800")
          i.fa-solid.fa-pen.mr-1
          | Editar

      div.border-t.border-gray-200
        dl
          div.bg-gray-50.px-6.py-4.grid.grid-cols-3.gap-4
            dt.text-sm.font-medium.text-gray-500 Nome
            dd.mt-1.text-sm.text-gray-900.col-span-2 #{user.name}
          
          div.bg-white.px-6.py-4.grid.grid-cols-3.gap-4
            dt.text-sm.font-medium.text-gray-500 Email
            dd.mt-1.text-sm.text-gray-900.col-span-2 #{user.email}
          
          div.bg-gray-50.px-6.py-4.grid.grid-cols-3.gap-4
            dt.text-sm.font-medium.text-gray-500 Cargo
            dd.mt-1.text-sm.col-span-2
              if user.role == 'manager'
                span.px-2.py-1.text-xs.font-bold.rounded-full.bg-purple-100.text-purple-800 Manager
              else
                span.px-2.py-1.text-xs.font-bold.rounded-full.bg-blue-100.text-blue-800 Employee

          div.bg-white.px-6.py-4.grid.grid-cols-3.gap-4
            dt.text-sm.font-medium.text-gray-500 Departamento
            dd.mt-1.text-sm.text-gray-900.col-span-2 #{user.department_name || 'Nenhum'}

      div.px-6.py-4.bg-gray-50.border-t.border-gray-200
        a(href="/users" class="text-blue-600 hover:text-blue-900 font-medium text-sm")
          i.fa-solid.fa-arrow-left.mr-1
